<!-- new window of adding todo -->
<div id="creating_todo">
  <%= render 'create' %>
</div>

<!-- todos list grouped by projects -->
<div class = "header">
  <div class = "elements">
      <h1 class ="title">Задачи</h1>
			<%= link_to(image_tag('addTodoIcon.png'), '#', :onclick => 'hideToggle("newTodo", "plus")' , :id => 'plus')%>
    </div>
</div>

<div class="container">
	<div class="row">
			<% @projects.each do |project| %>
				<div class=" col-lg-4 col-md-6 col-sm-12 col-xs-12">
					<div class="shadow">
							<h2 ><%= project.title %></h2>
							<hr>
						  <% project.todos.each do |t|%>
                <div class="todo_item">
                  <%= form_for @projects.first, url: {action: "update"}, :html => {:id => 'check_form'} do |f| %>
      									<%= check_box_tag t.id,  t.isCompleted%>
                        <input name="isCompleted" type="hidden" value= <%= !t.isCompleted %> >
                        <!--<input name="commit" type="hidden" value= <%= t.id %> >-->
                        <%= submit_tag(t.id, class: "submit_flag", id: t.id) %>
                        <div id="item_<%= t.id %>" class="todo_item_text"><%= t.text %></div><br>
  								<% end %>
                </div>
              <% end %><br>
					</div>
				</div>
			<% end %>
	</div>
</div>
